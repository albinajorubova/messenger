<UserControl x:Class="CourseProject__Messenger.usercontrols.UserChat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Name="userChat">
    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
        <Border CornerRadius="50" Width="30" Height="30">
            <Border.Background>
                <ImageBrush ImageSource="{Binding ElementName=userChat, Path=Image}"/>
            </Border.Background>
            <TextBlock Text="{Binding ElementName=userChat,Path=Username}" Margin="10 0 0 0" FontSize="12" FontWeight="SemiBold" Foreground="#37363b" VerticalAlignment="Center"/>
        </Border>
    </StackPanel>
</UserControl>
