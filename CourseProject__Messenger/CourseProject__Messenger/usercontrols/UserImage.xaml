<UserControl x:Class="CourseProject__Messenger.usercontrols.UserImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CourseProject__Messenger.usercontrols"
             Name="userImage">

    <Border BorderThickness="2" BorderBrush="#fff" CornerRadius="50" VerticalAlignment="Center">
        <Ellipse Width="23" Height="23" >
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding ElementName=userImage, Path=image}"/>
            </Ellipse.Fill>
        </Ellipse>
        
    </Border>
</UserControl>
